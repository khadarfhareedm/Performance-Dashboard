import React from 'react';
import Icon from '@/components/ui/AppIcon';

interface QualityMetric {
  id: string;
  name: string;
  value: number;
  status: 'excellent' | 'good' | 'warning' | 'critical';
  description: string;
}

interface DataQualityPanelProps {
  qualityMetrics: QualityMetric[];
  lastUpdated: Date;
}

const DataQualityPanel = ({ qualityMetrics, lastUpdated }: DataQualityPanelProps) => {
  const getStatusColor = (status: string) => {
    switch (status) {
      case 'excellent':
        return 'text-success';
      case 'good':
        return 'text-primary';
      case 'warning':
        return 'text-warning';
      case 'critical':
        return 'text-error';
      default:
        return 'text-muted-foreground';
    }
  };

  const getStatusIcon = (status: string) => {
    switch (status) {
      case 'excellent':
        return 'CheckCircleIcon';
      case 'good':
        return 'CheckIcon';
      case 'warning':
        return 'ExclamationTriangleIcon';
      case 'critical':
        return 'XCircleIcon';
      default:
        return 'QuestionMarkCircleIcon';
    }
  };

  const getProgressBarColor = (status: string) => {
    switch (status) {
      case 'excellent':
        return 'bg-success';
      case 'good':
        return 'bg-primary';
      case 'warning':
        return 'bg-warning';
      case 'critical':
        return 'bg-error';
      default:
        return 'bg-muted';
    }
  };

  return (
    <div className="space-y-6">
      {/* Data Quality Header */}
      <div className="bg-card border border-border rounded-lg p-4">
        <div className="flex items-center justify-between mb-4">
          <h3 className="text-lg font-semibold text-foreground flex items-center gap-2">
            <Icon name="ShieldCheckIcon" size={20} />
            Data Quality
          </h3>
          <div className="text-xs text-muted-foreground">
            Updated: {lastUpdated.toLocaleTimeString()}
          </div>
        </div>

        <div className="space-y-4">
          {qualityMetrics.map((metric) => (
            <div key={metric.id} className="space-y-2">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-2">
                  <Icon 
                    name={getStatusIcon(metric.status) as any} 
                    size={16} 
                    className={getStatusColor(metric.status)} 
                  />
                  <span className="text-sm font-medium text-foreground">
                    {metric.name}
                  </span>
                </div>
                <span className="text-sm font-bold text-foreground">
                  {metric.value}%
                </span>
              </div>
              
              <div className="w-full bg-muted rounded-full h-2">
                <div
                  className={`h-2 rounded-full transition-all duration-300 ${getProgressBarColor(metric.status)}`}
                  style={{ width: `${metric.value}%` }}
                />
              </div>
              
              <p className="text-xs text-muted-foreground">
                {metric.description}
              </p>
            </div>
          ))}
        </div>
      </div>

      {/* Filter Summary */}
      <div className="bg-card border border-border rounded-lg p-4">
        <h3 className="text-lg font-semibold text-foreground flex items-center gap-2 mb-4">
          <Icon name="AdjustmentsHorizontalIcon" size={20} />
          Active Filters
        </h3>
        
        <div className="space-y-3">
          <div className="flex items-center justify-between text-sm">
            <span className="text-muted-foreground">Date Range:</span>
            <span className="font-medium text-foreground">Jan 1 - Dec 31, 2024</span>
          </div>
          <div className="flex items-center justify-between text-sm">
            <span className="text-muted-foreground">Data Source:</span>
            <span className="font-medium text-foreground">All Sources</span>
          </div>
          <div className="flex items-center justify-between text-sm">
            <span className="text-muted-foreground">Category:</span>
            <span className="font-medium text-foreground">Performance</span>
          </div>
          <div className="flex items-center justify-between text-sm">
            <span className="text-muted-foreground">Records:</span>
            <span className="font-medium text-foreground">12,847</span>
          </div>
        </div>
      </div>

      {/* Export Options */}
      <div className="bg-card border border-border rounded-lg p-4">
        <h3 className="text-lg font-semibold text-foreground flex items-center gap-2 mb-4">
          <Icon name="ArrowDownTrayIcon" size={20} />
          Quick Export
        </h3>
        
        <div className="space-y-2">
          <button className="w-full flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-muted rounded-md transition-colors duration-150">
            <Icon name="DocumentTextIcon" size={16} />
            Export as CSV
          </button>
          <button className="w-full flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-muted rounded-md transition-colors duration-150">
            <Icon name="DocumentChartBarIcon" size={16} />
            Export as Excel
          </button>
          <button className="w-full flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-muted rounded-md transition-colors duration-150">
            <Icon name="PhotoIcon" size={16} />
            Export as PNG
          </button>
          <button className="w-full flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-muted rounded-md transition-colors duration-150">
            <Icon name="DocumentIcon" size={16} />
            Generate Report
          </button>
        </div>
      </div>
    </div>
  );
};

export default DataQualityPanel;
