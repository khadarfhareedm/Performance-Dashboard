import React from 'react';
import Icon from '@/components/ui/AppIcon';

interface MetricCardProps {
  title: string;
  value: string;
  change: string;
  trend: 'up' | 'down' | 'stable';
  icon: string;
  threshold?: 'good' | 'warning' | 'critical';
}

const MetricCard = ({ title, value, change, trend, icon, threshold = 'good' }: MetricCardProps) => {
  const getThresholdColor = () => {
    switch (threshold) {
      case 'good':
        return 'text-success border-success/20 bg-success/5';
      case 'warning':
        return 'text-warning border-warning/20 bg-warning/5';
      case 'critical':
        return 'text-error border-error/20 bg-error/5';
      default:
        return 'text-muted-foreground border-border bg-muted/5';
    }
  };

  const getTrendIcon = () => {
    switch (trend) {
      case 'up':
        return 'ArrowTrendingUpIcon';
      case 'down':
        return 'ArrowTrendingDownIcon';
      case 'stable':
        return 'MinusIcon';
      default:
        return 'MinusIcon';
    }
  };

  return (
    <div className={`p-4 rounded-lg border ${getThresholdColor()}`}>
      <div className="flex items-center justify-between mb-2">
        <Icon name={icon as any} size={20} />
        <Icon 
          name={getTrendIcon() as any} 
          size={16} 
          className={trend === 'up' ? 'text-success' : trend === 'down' ? 'text-error' : 'text-muted-foreground'} 
        />
      </div>
      <div className="space-y-1">
        <h3 className="text-sm font-medium text-muted-foreground">{title}</h3>
        <p className="text-2xl font-bold text-foreground">{value}</p>
        <p className="text-xs text-muted-foreground">{change}</p>
      </div>
    </div>
  );
};

